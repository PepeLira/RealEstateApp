@model RealEstateApp.ViewModels.Insciption.CreateViewModel

@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Inscription</h2>
            <hr />   
        </div>
        <div class="mb-3">
            <label asp-for="NewInscription.Cne"></label>
            <input asp-for="NewInscription.Cne" class="form-control" />
            <span asp-validation-for="NewInscription.Cne" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NewInscription.Commune, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.NewInscription.Commune, (SelectList)ViewBag.CommuneOptions, "-- Select --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewInscription.Commune, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="NewInscription.Block"></label>
            <input asp-for="NewInscription.Block" class="form-control" />
            <span asp-validation-for="NewInscription.Block" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NewInscription.Property"></label>
            <input asp-for="NewInscription.Property" class="form-control" />
            <span asp-validation-for="NewInscription.Property" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NewInscription.Sellers, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.SelectedSellerId, Model.AvailableSellers, "-- Select --", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NewInscription.Buyers, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.SelectedBuyerId, Model.AvailableBuyers, "-- Select --", new { @class = "form-control" })
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="NewInscription.Fojas"></label>
            <input asp-for="NewInscription.Fojas" class="form-control" />
            <span asp-validation-for="NewInscription.Fojas" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NewInscription.InscriptionNumber"></label>
            <input asp-for="NewInscription.InscriptionNumber" class="form-control" />
            <span asp-validation-for="NewInscription.InscriptionNumber" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        
        <a asp-controller="innscription" asp-action="Index" class="btn btn-secondary style="width:150px">
            Back to List
        </a>
        
    </div>
</form>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
